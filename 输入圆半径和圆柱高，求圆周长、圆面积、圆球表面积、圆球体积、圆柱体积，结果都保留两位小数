#include<stdio.h>
#define pi 3.1416
int  main()
{
	float r, h, c, v1, v2, s1, s2;
	scanf_s("%f,%f", &r, &h);
	c = 2 * pi * r;
	v2 = pi * r * r * h;
	v1 = pi * r * r * r * 4 / 3;
	s1 = pi * r * r;
	s2 = 4 * pi * r * r;
	printf("圆周长为:l=%.2f\n圆面积为:s=%.2f\n圆球表面积为:sq=%.2f\n圆球体积为:v=%.2f\n圆柱体积为:vz=%.2f\n", c, s1, s2, v1, v2);
}
